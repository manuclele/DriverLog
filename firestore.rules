rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    
    // Helper function to check auth
    function isAuthenticated() {
      return request.auth != null;
    }
    
    function isOwner(userId) {
      return request.auth.uid == userId;
    }
    
    function isMaster() {
        // Assuming role is stored on the user document
        // This requires getting the user doc on every write, which costs a read.
        // Alternative: Custom Claims via Cloud Functions.
        return get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role == 'master';
    }

    // Users collection
    match /users/{userId} {
      allow read: if isAuthenticated(); // Drivers need to read their own, Masters read all (filtered in query)
      allow write: if isOwner(userId) || isMaster();
    }
    
    // Vehicles collection
    match /vehicles/{vehicleId} {
      allow read: if isAuthenticated();
      allow write: if isMaster(); // Only master manages vehicles
    }
    
    // Logs collection (Trips, Refuels, etc)
    match /logs/{logId} {
      allow read: if isAuthenticated() && (resource.data.userId == request.auth.uid || isMaster());
      allow create: if isAuthenticated() && request.resource.data.userId == request.auth.uid;
      allow update, delete: if isMaster(); // Only master can edit/delete logs for compliance
    }
  }
}